     "primaryKey": "fakelongstring==",
     "uri": "https://fake.documents.azure.com:443/"
    },
    "label": "azure-cosmosdb-sql",
    "name": "mycosmosdb",
    "plan": "sql-api",
    "provider": null,
    "syslog_drain_url": null,
    "tags": [
     "Azure",
     "CosmosDB",
     "Database",
